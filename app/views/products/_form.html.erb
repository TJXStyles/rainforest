<%= form_for @product, :html => { :multipart => true } do |f| %>
	<% if @product.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@product.errors.count, "error") %> prohibited this products from being saved: </h2>

			<ul>
			<% @product.error.full_message.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	<div class="field">
		<%= f.label :description %>
		<%= f.text_area(:description, :size => "30x5")  %>
	</div>

	<div class="field">
		<%= f.label :price_in_cents, "Price" %>
		<%= f.text_field :price_in_cents %>
	</div>
	<div class="field">
		<%= f.file_field :image %>

	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>